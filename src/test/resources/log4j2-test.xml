<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <MemAppender name="MemoryAppender">
      <PatternLayout pattern="[%p] %c: %m%n"/>
    </MemAppender>
  </Appenders>
  <Loggers>
    <Root level="all">
      <AppenderRef ref="MemoryAppender"/>
    </Root>
  </Loggers>
</Configuration>